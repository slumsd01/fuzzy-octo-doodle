<div class="row">    
    <!-- about section -->
    <section id="about" class="col-12 col-lg-6">
        <div class="row justify-content-around">
            <div class="col-4">
                <img src="/images/profile-icon.png">
                <p>Create a profile</p>
            </div>

            <div class="col-4">
                <img src="/images/pawprint-icon.png">
                <p>Add your pets</p>
            </div>

            <div class="col-4">
                <img src="/images/calendar-icon.png">
                <p>Find a sitter</p>
            </div>
            <div class="col-12">
                <img src="/images/magnifying-glass-icon.png">
                <p>Or register as a sitter<br>to find pets to care for</p>
            </div>
        </div>
    </section>

    <!-- login & registration section -->
    <section id="login" class="col-12 col-md-6 col-lg-3">
        <p>Login</p>
        <form>
            <div class="mb-3">
                <label for="email-login" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email-login">
            </div>
            <div class="mb-3">
                <label for="password-login" class="form-label">Password</label>
                <input type="password" class="form-control" id="password-login">
            </div>            
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </section>

    <section id="register" class="col-12 col-md-6 col-lg-3">
        <p>Register</p>
        <form>
            <div class="mb-3">
                <label for="username-signup" class="form-label">Username</label>
                <input type="text" class="form-control" id="username-signup">
            </div>
            <div class="mb-3">
                <label for="email-signup" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email-signup">
            </div>
            <div class="mb-3">
                <label for="password-signup" class="form-label">Password</label>
                <input type="password" class="form-control" id="password-signup">
            </div>            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="pet-owner">
                <label class="form-check-label" for="user_type">
                    I am a pet owner
                </label>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="pet-sitter">
                <label class="form-check-label" for="user_type">
                    I am a pet sitter
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </section>
</div>
